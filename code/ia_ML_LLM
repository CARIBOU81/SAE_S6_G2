import os
import json
import pandas as pd
import numpy as np
from pathlib import Path
from dotenv import load_dotenv
from sklearn.model_selection import train_test_split
from sklearn.metrics import classification_report, accuracy_score

import torch
from datasets import Dataset
from transformers import (
    CamembertTokenizer,
    CamembertForSequenceClassification,
    Trainer,
    TrainingArguments
)

# =========================
# CONFIG
# =========================
load_dotenv()

FICHIER_SORTIE = os.getenv("OUTPUT_FILE_prediction")
dossier_data = os.getenv("OUTPUT_FILE3")
path = Path(dossier_data)

FILES = {}

if path.exists():
    for file_path in path.glob("*.jsonl"):
        FILES[file_path.stem] = str(file_path)

print("Fichiers utilisés :", FILES)


# =========================
# LOAD DATASET
# =========================
def load_dataset_jsonl(path):
    texts, stars = [], []

    with open(path, "r", encoding="utf-8") as f:
        for line in f:
            obj = json.loads(line)
            texts.append(obj["text"])
            stars.append(obj["stars"] - 1)  # labels 0-4

    return pd.DataFrame({"text": texts, "label": stars})


# =========================
# TRAIN LOOP
# =========================
for etablissement, filepath in FILES.items():

    print(f"\n=============================")
    print(f" MODELE LLM POUR : {etablissement.upper()}")
    print(f"=============================")

    df = load_dataset_jsonl(filepath)

    X_train, X_test, y_train, y_test = train_test_split(
        df["text"],
        df["label"],
        test_size=0.2,
        random_state=42,
        stratify=df["label"]
    )

    train_df = pd.DataFrame({"text": X_train, "label": y_train})
    test_df = pd.DataFrame({"text": X_test, "label": y_test})

    train_dataset = Dataset.from_pandas(train_df)
    test_dataset = Dataset.from_pandas(test_df)

    # =========================
    # TOKENIZER
    # =========================
    tokenizer = CamembertTokenizer.from_pretrained("camembert-base")

    def tokenize(batch):
        return tokenizer(
            batch["text"],
            padding="max_length",
            truncation=True,
            max_length=256
        )

    train_dataset = train_dataset.map(tokenize, batched=True)
    test_dataset = test_dataset.map(tokenize, batched=True)

    train_dataset.set_format("torch", columns=["input_ids", "attention_mask", "label"])
    test_dataset.set_format("torch", columns=["input_ids", "attention_mask", "label"])

    # =========================
    # MODEL
    # =========================
    model = CamembertForSequenceClassification.from_pretrained(
        "camembert-base",
        num_labels=5
    )

    # =========================
    # TRAINING ARGUMENTS
    # =========================
    training_args = TrainingArguments(
        output_dir="./results",
        evaluation_strategy="epoch",
        save_strategy="epoch",
        learning_rate=2e-5,
        per_device_train_batch_size=16,
        per_device_eval_batch_size=16,
        num_train_epochs=3,
        weight_decay=0.01,
        logging_dir="./logs",
        load_best_model_at_end=True
    )

    trainer = Trainer(
        model=model,
        args=training_args,
        train_dataset=train_dataset,
        eval_dataset=test_dataset
    )

    # =========================
    # TRAIN
    # =========================
    trainer.train()

    # =========================
    # EVALUATION
    # =========================
    predictions = trainer.predict(test_dataset)
    y_pred = np.argmax(predictions.predictions, axis=1)

    print("\n--- RESULTATS LLM ---")
    print(classification_report(y_test, y_pred))
    print("Accuracy :", accuracy_score(y_test, y_pred))

    # =========================
    # SAVE PREDICTIONS
    # =========================
    df_pred = pd.DataFrame({
        "true_stars": y_test.values + 1,
        "predicted_stars": y_pred + 1
    })

    output_dir = Path(FICHIER_SORTIE)
    output_dir.mkdir(parents=True, exist_ok=True)

    output_file = output_dir / f"predictions_LLM_{etablissement}.csv"
    df_pred.to_csv(output_file, index=False)

    print(f"Fichier sauvegardé : {output_file}")
